{
    "name": "Chocolate Chip Cookies",
    "image": "",
    "ingredients": [
        {
            "name": "Flour",
            "quantity": "2 1/2",
            "unit": "cup"
        },
        {
            "name": "Baking Soda",
            "quantity": "1",
            "unit": "tsp"
        },
        {
            "name": "Butter",
            "quantity": "6",
            "unit": "tbsp"
        },
        {
            "name": "Brown Sugar",
            "quantity": "1 1/2",
            "unit": "cup"
        },
        {
            "name": "Egg",
            "quantity": "1",
            "unit": "none"
        },
        {
            "name": "Vanilla",
            "quantity": "2",
            "unit": "tsp"
        },
        {
            "name": "Semi-Sweet Chocolate Chips",
            "quantity": "1",
            "unit": "cup"
        }
    ],
    "steps": [
        {
            "step": "Sift Flour and Baking Soda together in a bowl"
        },
        {
            "step": "Melt Butter in a small bowl. Mix Brown Sugar and melted butter in a large bowl. Stir in Egg and Vanilla until well blended. Add flour mixture and stir until just combined. Stir in Semi-Sweet Chocolate Chips"
        },
        {
            "step": "Drop a heaping tablespoon of dough onto a cookie sheet about 2 1/2 inches apart. Bake at 350F for 9-11 minutes or until edges harden and centers are still soft"
        }
    ]
}