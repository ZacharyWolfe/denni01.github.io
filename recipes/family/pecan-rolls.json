{
    "name": "Pecan Rolls",
    "image": "",
    "ingredients": [
        {
            "name": "Dry Active Yeast",
            "quantity": "2",
            "unit": "package"
        },
        {
            "name": "Warm Water",
            "quantity": "1/4",
            "unit": "cup"
        },
        {
            "name": "Milk",
            "quantity": "1",
            "unit": "cup"
        },
        {
            "name": "Shortening",
            "quantity": "1/4",
            "unit": "cup"
        },
        {
            "name": "Sugar",
            "quantity": "1/2",
            "unit": "cup"
        },
        {
            "name": "Salt",
            "quantity": "1",
            "unit": "tbsp"
        },
        {
            "name": "Eggs",
            "quantity": "2",
            "unit": "none"
        },
        {
            "name": "Flour",
            "quantity": "2",
            "unit": "cup"
        },
        {
            "name": "Butter",
            "quantity": "20",
            "unit": "tbsp"
        },
        {
            "name": "Brown Sugar",
            "quantity": "1 1/2",
            "unit": "cup"
        },
        {
            "name": "Pecans",
            "quantity": "1",
            "unit": "cup"
        },
        {
            "name": "Icing",
            "quantity": "1",
            "unit": "cup"
        }
    ],
    "steps": [
        {
            "step": "Chop Pecans"
        },
        {
            "step": "Mix Dry Active Yeast and Warm Water in a bowl. Wait until frothy. Mix Eggs into mixture."
        },
        {
            "step": "Scald Milk in a saucepan. Transfer to a bowl. Mix in Shortening, Sugar, Salt, and Flour"
        },
        {
            "step": "Mix yeast-egg mixture into batter. Knead dough on a lightly floured work surface for 10 minutes"
        },
        {
            "step": "Add dough to a lightly greased bowl and cover with a damp cloth. Let dough rise in a warm place for 2 hours or until doubled in size"
        },
        {
            "step": "Roll dough on a lightly floured work surface into a rectangle. Transfer to a greased baking sheet"
        },
        {
            "step": "Melt Butter in a bowl. Mix in Brown Sugar and Pecans. Spread mixture over dough. Bake at 350F until golden brown. Let pecan rolls cool. Glaze with icing"
        }
    ]
}