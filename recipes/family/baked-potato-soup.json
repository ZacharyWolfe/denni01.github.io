{
    "name": "Baked Potato Soup",
    "image": "",
    "ingredients": [
        {
            "name": "Butter",
            "quantity": "2/3",
            "unit": "cup"
        },
        {
            "name": "Flour",
            "quantity": "2/3",
            "unit": "cup"
        },
        {
            "name": "Milk",
            "quantity": "7",
            "unit": "cup"
        },
        {
            "name": "Baked, Cooled, and Peeled (optional) Large Baking Potatoes",
            "quantity": "4",
            "unit": "none"
        },
        {
            "name": "Chopped Onions",
            "quantity": "1/2",
            "unit": "cup"
        },
        {
            "name": "Bacon",
            "quantity": "12",
            "unit": "slices"
        },
        {
            "name": "Sour Cream",
            "quantity": "1",
            "unit": "cup"
        },
        {
            "name": "Shredded Cheddar Cheese",
            "quantity": "1 1/4",
            "unit": "cup"
        },
        {
            "name": "Pepper",
            "quantity": "1/2",
            "unit": "tsp"
        },
        {
            "name": "Salt",
            "quantity": "3/4",
            "unit": "tsp"
        }
    ],
    "steps": [
        {
            "step": "Melt butter in a large pot"
        },
        {
            "step": "Stir in flour; Heat and stir until smoothed"
        },
        {
            "step": "Gradually add milk, stirring until thickened"
        },
        {
            "step": "Add potatoes and onions. Bring to a boil, stirring constantly"
        },
        {
            "step": "Reduce heat; Simmer 10 minutes"
        },
        {
            "step": "Add remaining ingredients and stir until cheese is melted"
        }
    ]
}