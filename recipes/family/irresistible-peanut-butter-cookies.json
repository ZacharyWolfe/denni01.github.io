{
    "name": "Irresistible Peanut Butter Cookies",
    "image": "",
    "ingredients": [
        {
            "name": "Peanut Butter",
            "quantity": "3/4",
            "unit": "cup"
        },
        {
            "name": "Shortening",
            "quantity": "1/2",
            "unit": "cup"
        },
        {
            "name": "Brown Sugar",
            "quantity": "1 1/4",
            "unit": "cup"
        },
        {
            "name": "Milk",
            "quantity": "3",
            "unit": "tbsp"
        },
        {
            "name": "Vanilla",
            "quantity": "1",
            "unit": "tbsp"
        },
        {
            "name": "Egg",
            "quantity": "1",
            "unit": "none"
        },
        {
            "name": "Flour",
            "quantity": "1 3/4",
            "unit": "cup"
        },
        {
            "name": "Salt",
            "quantity": "1/2",
            "unit": "tsp"
        },
        {
            "name": "Baking Soda",
            "quantity": "3/4",
            "unit": "tsp"
        }
    ],
    "steps": [
        {
            "step": "Mix Peanut Butter, Shortening, Brown Sugar, Milk, and Vanilla with a mixer in a large bowl. Beat at a medium speed until well blended. Add Egg and mix until blended. Mix Flour, Salt, and Baking Soda into batter until blended"
        },
        {
            "step": "Drop batter onto an ungreased baking sheet using a teaspoon. Flatten batter slightly using tines of fork. Bake at 375F for 8-10 minutes until cookies begin to brown. Let cool on baking sheet for 2 minutes. Move cookies to a wire rack to cool"
        }
    ]
}