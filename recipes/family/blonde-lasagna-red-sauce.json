    "ingredients": [
        {
            "name": "Ricotta Cheese",
            "quantity": "30",
            "unit": "oz"
        },
        {
            "name": "Oregano",
            "quantity": "1 1/2",
            "unit": "tsp"
        },
        {
            "name": "Garlic Powder",
            "quantity": "1/2",
            "unit": "tsp"
        },
        {
            "name": "Ground Nutmeg",
            "quantity": "1/8",
            "unit": "tsp"
        },
        {
            "name": "Lasagna Noodles",
            "quantity": "1",
            "unit": "box"
        },
        {
            "name": "Broccoli",
            "quantity": "1",
            "unit": "stalk"
        },
        {
            "name": "Shredded Cheddar Cheese",
            "quantity": "1",
            "unit": "lb"
        },
        {
            "name": "Spaghetti Sauce",
            "quantity": "1",
            "unit": "jar"
        }
    ],
    "steps": [
        {
            "step": "Boil Lasagna Noodles in water to desired doneness"
        },
        {
            "step": "Mix Ricotta Cheese, Oregano, Garlic Powder and Nutmeg in a small bowl"
        },
        {
            "step": "Grease a baking dish. Add a layer of Lasagna Noodles. Add a layer of Ricotta Cheese mix, chopped Broccoli, and Shredded Cheddar Cheese over the noodles. Add new layers on top until all Lasagna Noodles have been used"
        },
        {
            "step": "Bake at 350F for 30-40 minutes until cheese is melted and lightly browned. Remove from oven and pour Spaghetti Sauce on top"
        }
    ]
