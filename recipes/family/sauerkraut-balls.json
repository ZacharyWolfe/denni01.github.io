{
    "name": "Sauerkraut Balls",
    "image": "",
    "ingredients": [
        {
            "name": "Butter",
            "quantity": "8",
            "unit": "tbsp"
        },
        {
            "name": "Onion",
            "quantity": "1",
            "unit": "none"
        },
        {
            "name": "Flour",
            "quantity": "1/4",
            "unit": "cup"
        },
        {
            "name": "Milk",
            "quantity": "1/2",
            "unit": "cup"
        },
        {
            "name": "Sausage",
            "quantity": "1 1/2",
            "unit": "lb"
        },
        {
            "name": "Sauerkraut",
            "quantity": "14",
            "unit": "oz"
        },
        {
            "name": "Eggs",
            "quantity": "4",
            "unit": "none"
        },
        {
            "name": "Crackers",
            "quantity": "1",
            "unit": "package"
        }
    ],
    "steps": [
        {
            "step": "Saute Onion in Butter until tender"
        },
        {
            "step": "Add Flour slowly until a ball begins to form. Add Milk. Mix until smooth ball forms. Remove from heat"
        },
        {
            "step": "Cook Sausage in a separate brain. Drain grease"
        },
        {
            "step": "Mix Sausage, Sauerkraut and Onion mixture. Roll into balls"
        },
        {
            "step": "Beat Eggs in a bowl. Crush crackers on a plate. Roll balls in Flour, dip into beaten Eggs, and coat with crackers"
        },
        {
            "step": "Deep Fry at 375F until golden brown"
        }
    ]
}