        },
        {
            "name": "Italian Breadcrumbs",
            "quantity": "1/2",
            "unit": "cup"
        },
        {
            "name": "Parmesan Cheese",
            "quantity": "1/2",
            "unit": "cup"
        },
        {
            "name": "Italian Seasoning",
            "quantity": "1/2",
            "unit": "tsp"
        },
        {
            "name": "Garlic Powder",
            "quantity": "1/4",
            "unit": "tsp"
        },
        {
            "name": "Egg",
            "quantity": "1",
            "unit": "none"
        },
        {
            "name": "Pepper",
            "quantity": "1",
            "unit": "tsp"
        }
    ],
    "steps": [
        {
            "step": "Mix Parmesan Cheese, Italian Breadcrumbs, Italian Seasoning, Garlic Powder, and Pepper in a bowl"
        },
        {
            "step": "Crack Egg into mixture and mix thoroughly"
        },
        {
            "step": "Gradually add Ground Beef to mixture"
        },
        {
            "step": "Roll mixture into 1 inch balls"
        },
        {
            "step": "Cook meatballs in a skillet over medium heat until browned. Add 1/4 cup of water and cook on medium-low heat until meatballs are cooked through"
        }
